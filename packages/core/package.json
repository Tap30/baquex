{
  "name": "@tapsioss/baquex",
  "version": "0.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tap30/baquex.git",
    "directory": "packages/core"
  },
  "files": [
    "./dist",
    "./README.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "baquex": "./dist/cli.js"
  },
  "scripts": {
    "prebuild": "shx rm -rf dist",
    "gen:tarball": "pnpm pack",
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc -b tsconfig.json",
      "clean": "if-file-deleted",
      "files": [
        "./{src,scripts}/**/*.{ts,tsx}",
        "./package.json",
        "./tsconfig.json",
        "!*.test.{ts,tsx}",
        "!./dist/**/*"
      ],
      "output": [
        "./dist/**/*"
      ]
    }
  },
  "dependencies": {
    "@tapsioss/baquex-elements": "workspace:*",
    "@tapsioss/baquex-runtime": "workspace:*",
    "@tapsioss/baquex-vtree": "workspace:*",
    "@vitejs/plugin-react": "^4.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "fast-json-stable-stringify": "^2.1.0",
    "ora": "^8.2.0",
    "react-router": "^7.6.0",
    "vite": "^6.2.0",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6"
  }
}
