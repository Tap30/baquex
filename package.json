{
  "name": "@repo/root",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "scripts": {
    "clear:dist": "tsx scripts/clear dist **/**/dist !node_modules/**/dist !.wireit/**/dist",
    "clear:tarball": "tsx scripts/clear **/**/*.tgz",
    "clear:node-modules": "tsx scripts/clear node_modules **/**/node_modules !node_modules/**/node_modules !.wireit/**/node_modules",
    "clear:wireit": "tsx scripts/clear **/**/.wireit !node_modules/**/.wireit",
    "clear": "run-p clear:*",
    "dev": "pnpm -r --parallel run dev",
    "gen:tarball": "wireit",
    "build": "pnpm -r --filter=!@repo/playground run build",
    "test": "vitest",
    "format:check": "wireit",
    "format:write": "wireit",
    "lint:ts": "wireit",
    "lint:ecma": "wireit",
    "lint": "run-p lint:ts lint:ecma format:check"
  },
  "wireit": {
    "format:check": {
      "command": "prettier . --check --cache",
      "files": [
        "./.prettierrc",
        "./.prettierignore",
        "**/*.{js,jsx,ts,tsx,md,json,css}",
        "!**/dist/**/*",
        "!pnpm-lock.yaml"
      ],
      "output": []
    },
    "format:write": {
      "command": "prettier . --write --cache",
      "files": [
        "./.prettierrc",
        "./.prettierignore",
        "**/*.{js,jsx,ts,tsx,md,json,css}",
        "!**/dist/**/*",
        "!pnpm-lock.yaml"
      ],
      "output": []
    },
    "lint:ts": {
      "command": "tsc --project ./tsconfig.json",
      "files": [
        "./tsconfig.json",
        "./tsconfig.tsbuildinfo",
        "**/*.{ts,tsx}",
        "!dist/**/*"
      ],
      "output": []
    },
    "lint:ecma": {
      "command": "eslint --color --cache --config eslint.config.js --cache-location .eslintcache",
      "files": [
        "**/*.{ts,tsx}",
        "!dist/**/*",
        "./eslint.config.js"
      ],
      "output": []
    },
    "gen:tarball": {
      "command": "pnpm -r --parallel --filter=@tapsioss/* run gen:tarball",
      "output": [
        "./packages/**/*.tgz"
      ],
      "dependencies": [
        "build"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@repo/utils": "workspace:*",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.17.43",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/eslint-plugin": "^1.1.44",
    "del": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "flat-cache": "^6.1.9",
    "globals": "^15.15.0",
    "globby": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "shx": "^0.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3",
    "wireit": "^0.14.12"
  }
}
