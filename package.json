{
  "name": "@repo/root",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "private": true,
  "scripts": {
    "dev:playground": "pnpm --filter @repo/playground run dev",
    "dev": "run-s build dev:playground",
    "build": "wireit",
    "test": "vitest",
    "lint": "wireit"
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "lint:ts",
        "lint:ecma"
      ]
    },
    "lint:ts": {
      "command": "tsc --project tsconfig.json",
      "files": [
        "./tsconfig.json",
        "**/*.{ts,tsx}",
        "!dist/**/*"
      ],
      "output": []
    },
    "lint:ecma": {
      "command": "eslint --color --cache --config eslint.config.js --cache-location .eslintcache",
      "files": [
        "**/*.{ts,tsx}",
        "!dist/**/*",
        "./eslint.config.js"
      ],
      "output": []
    },
    "build": {
      "dependencies": [
        "build:vtree",
        "build:storage",
        "build:runtime",
        "build:elements",
        "build:distributor",
        "build:core",
        "build:cli"
      ]
    },
    "build:vtree": {
      "command": "pnpm --filter @tapsioss/baquex-vtree run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/vtree/**/*.ts",
        "./packages/vtree/scripts/*.ts",
        "./packages/vtree/tsconfig.{build,cjs,esm}.json",
        "!./packages/vtree/**/*.test.ts",
        "!./packages/vtree/dist/**/*"
      ],
      "output": [
        "./packages/vtree/dist/**/*"
      ]
    },
    "build:storage": {
      "command": "pnpm --filter @tapsioss/baquex-storage run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/storage/**/*.ts",
        "./packages/storage/scripts/*.ts",
        "./packages/storage/tsconfig.{build,cjs,esm}.json",
        "!./packages/storage/**/*.test.ts",
        "!./packages/storage/dist/**/*"
      ],
      "output": [
        "./packages/storage/dist/**/*"
      ]
    },
    "build:runtime": {
      "command": "pnpm --filter @tapsioss/baquex-runtime run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/runtime/**/*.ts",
        "./packages/runtime/scripts/*.ts",
        "./packages/runtime/tsconfig.{build,cjs,esm}.json",
        "!./packages/runtime/**/*.test.ts",
        "!./packages/runtime/dist/**/*"
      ],
      "output": [
        "./packages/runtime/dist/**/*"
      ]
    },
    "build:elements": {
      "command": "pnpm --filter @tapsioss/baquex-elements run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/elements/**/*.ts",
        "./packages/elements/scripts/*.ts",
        "./packages/elements/tsconfig.{build,cjs,esm}.json",
        "!./packages/elements/**/*.test.ts",
        "!./packages/elements/dist/**/*"
      ],
      "output": [
        "./packages/elements/dist/**/*"
      ],
      "dependencies": [
        "build:vtree",
        "build:runtime"
      ]
    },
    "build:distributor": {
      "command": "pnpm --filter @tapsioss/baquex-distributor run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/distributor/**/*.ts",
        "./packages/distributor/scripts/*.ts",
        "./packages/distributor/tsconfig.{build,cjs,esm}.json",
        "!./packages/distributor/**/*.test.ts",
        "!./packages/distributor/dist/**/*"
      ],
      "output": [
        "./packages/distributor/dist/**/*"
      ]
    },
    "build:core": {
      "command": "pnpm --filter @tapsioss/baquex run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/core/**/*.ts",
        "./packages/core/scripts/*.ts",
        "./packages/core/tsconfig.{build,cjs,esm}.json",
        "!./packages/core/**/*.test.ts",
        "!./packages/core/dist/**/*"
      ],
      "output": [
        "./packages/core/dist/**/*"
      ]
    },
    "build:cli": {
      "command": "pnpm --filter @tapsioss/baquex-cli run build",
      "clean": "if-file-deleted",
      "files": [
        "./packages/cli/**/*.ts",
        "./packages/cli/scripts/*.ts",
        "./packages/cli/tsconfig.{build,cjs,esm}.json",
        "!./packages/cli/**/*.test.ts",
        "!./packages/cli/dist/**/*"
      ],
      "output": [
        "./packages/cli/dist/**/*"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.17.30",
    "@vitest/eslint-plugin": "^1.1.42",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "flat-cache": "^6.1.8",
    "globals": "^15.15.0",
    "globby": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "shx": "^0.3.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1",
    "wireit": "^0.14.12"
  }
}
